@model ProjectManagementSystem2.Models.Project

@{
    ViewBag.Title = "ManagerViewProject";
}

<h2>ManagerViewProject</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CompletionStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompletionStatus)
        </dd>

    </dl>
</div>
<ol>
    @foreach (var task in ViewBag.Tasks)
    {
        <li>
            <p>
                Task Name: @task.TaskName
            </p>
            <p>
                Completion Percentage: @task.CompletionPercentage
            </p>
            @foreach(var developer in task.Developers)
            {
                <p>@developer.UserName</p>
            }
        </li>
    }

</ol>
